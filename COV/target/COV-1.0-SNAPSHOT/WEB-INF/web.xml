<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Covoiturage</display-name>

    <!-- Servlet Mapping for UserServlet -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.covoiturage.cov.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <!-- Servlet Mapping for RideServlet -->
    <servlet>
        <servlet-name>RideServlet</servlet-name>
        <servlet-class>com.covoiturage.cov.RideServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RideServlet</servlet-name>
        <url-pattern>/ride</url-pattern>
    </servlet-mapping>

    <!-- Servlet Mapping for ReservationServlet -->
    <servlet>
        <servlet-name>ReservationServlet</servlet-name>
        <servlet-class>com.covoiturage.cov.ReservationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservationServlet</servlet-name>
        <url-pattern>/reservation</url-pattern>
    </servlet-mapping>

    <!-- Servlet Mapping for ReviewServlet -->
    <servlet>
        <servlet-name>ReviewServlet</servlet-name>
        <servlet-class>com.covoiturage.cov.ReviewServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReviewServlet</servlet-name>
        <url-pattern>/review</url-pattern>
    </servlet-mapping>

    <!-- Default page mapping -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file> <!-- or home.jsp if you prefer -->
    </welcome-file-list>

</web-app>
